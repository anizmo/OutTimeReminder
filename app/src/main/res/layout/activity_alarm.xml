<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AlarmActivity">

    <TextView android:id="@+id/toolbarText" android:layout_width="0dp" android:layout_height="wrap_content"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              android:lineHeight="24sp"
              android:textColor="#091e42"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
              android:text="Out Time Reminder"
              android:textSize="24sp"
              android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"/>

    <ImageView android:src="@drawable/illustration" android:layout_width="144dp"
               android:layout_height="144dp"
               android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
               android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/toolbarText"
               android:id="@+id/imageView"/>

    <TextView
            android:id="@+id/happy_txt"
            android:layout_width="wrap_content" android:layout_height="0dp"
              android:textSize="24sp"
              android:text="Yay! Your work is done for today"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="16dp"
              android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="48dp"
                    android:background="@color/colorPrimary"
                    android:id="@+id/done"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginEnd="60dp"
                    app:layout_constraintTop_toBottomOf="@id/happy_txt" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="DONE"
                  android:id="@+id/done_text"
                  android:textColor="@color/white"
                  android:textSize="20sp"
                  android:layout_centerInParent="true"
        />

    </RelativeLayout>

    <TextView android:text="Illustration by pongsakornred" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:layout_marginBottom="40dp"
              android:id="@+id/credits"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>